{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"env": ["NODE_ENV"]
		},
		"start": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"env": ["DATABASE_URL", "PORT", "AUTH_REDIRECT_URL", "AUTH_COOKIE_DOMAIN"]
		},
		"test": {
			"dependsOn": ["^build"],
			"env": ["CI", "BASE_URL", "JEST_WORKER_ID"]
		},
		"check": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	}
}
